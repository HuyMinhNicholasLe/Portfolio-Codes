      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);                                             //"-do2"
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off

      /* THIRD */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(400);                                             //"mom-2"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(400);                                             //"-my2"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"shark2"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"do-2"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);                                             //"-do2"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"-do2"
      digitalWrite(ledPins[2], LOW); //first green is off
