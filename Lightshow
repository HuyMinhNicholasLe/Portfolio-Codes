        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[5], HIGH); //first blue is on      //"do4"
      delay(200);
      digitalWrite(ledPins[4], HIGH); //first green is on     //"-do4"
      delay(200);
      digitalWrite(ledPins[3], HIGH); //yellow is on          //"-do4"
      delay(200);
      digitalWrite(ledPins[2], HIGH); //second green is on    //"-do4"
      delay(200);
      digitalWrite(ledPins[1], HIGH); //second blue is on     //"-do4"
      delay(200);
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);                                             //"-do4"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }

      /* THIRD */
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(400);                                             //"grand-4"
      digitalWrite(ledPins[1], LOW); //first blue is off 
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(400);                                             //"-ma4"
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"shark4"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[5], HIGH); //first blue is on      //"do-4"
      delay(200);
      digitalWrite(ledPins[4], HIGH); //first green is on     //"-do4"
      delay(200);
      digitalWrite(ledPins[3], HIGH); //yellow is on          //"-do4"
      delay(200);
      digitalWrite(ledPins[2], HIGH); //second green is on    //"-do4"
      delay(200);
      digitalWrite(ledPins[1], HIGH); //second blue is on     //"-do4"
      delay(200);
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);                                             //"-do4"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }

      /* FOURTH - GRANDMA SHARK ONLY */
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(400);                                             //"grand-4"
      digitalWrite(ledPins[1], LOW); //first blue is off 
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(400);                                             //"-ma4"
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"shark4"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }

      /* FIRST - GRANDPA SHARK */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(450);                                             //"grand-5"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(450);                                             //"-pa5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"shark5"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first green is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //first green is off
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is off
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off

      /* SECOND */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(400);                                             //"grand-5"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(400);                                             //"-pa5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"shark5"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first green is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //first green is off
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is off
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off

      /* THIRD */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(400);                                             //"grand-5"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(400);                                             //"-pa5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"shark5"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first green is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //first green is off
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is off
      delay(200);                                             //"do-5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off

      /* FOURTH - GRANDPA SHARK ONLY */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(350);                                             //"grand-5"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(350);                                             //"-pa5"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"shark5"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }

      /* FIRST - LET’S GO HUNT */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(450);                                             //"let’s-6"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(450);                                             //"-go6"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"hunt6"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[0], HIGH); //first red is on      //"do-6"
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[2], HIGH); //first green is on     //"-do6"
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[3], HIGH); //yellow is on          //"-do6"
      delay(200);
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off     //"-do6"
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on

      /* SECOND */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(450);                                             //"let’s-6"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(450);                                             //"-go6"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"hunt6"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[0], HIGH); //first red is on      //"do-6"
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[2], HIGH); //first green is on     //"-do6"
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[3], HIGH); //yellow is on          //"-do6"
      delay(200);
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off     //"-do6"
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on

      /* THIRD */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(450);                                             //"let’s-6"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(450);                                             //"-go6"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"hunt6"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[0], HIGH); //first red is on      //"do-6"
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[2], HIGH); //first green is on     //"-do6"
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[3], HIGH); //yellow is on          //"-do6"
      delay(200);
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off     //"-do6"
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on

      /* FOURTH - LET’S GO HUNT ONLY */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(450);                                             //"let’s-6"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(450);                                             //"-go6"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all on
      }
      delay(300);                                             //"hunt6"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
  }else{
    for(index = 6; index >= 0; index--)
    {
      digitalWrite(ledPins[index], LOW);
    }
  }
}



