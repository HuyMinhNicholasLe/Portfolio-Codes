      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all off
      }
      digitalWrite(ledPins[1], HIGH); //first blue is on      //"do-3"
      delay(200);
      digitalWrite(ledPins[2], HIGH); //first green is on     //"-do3"
      delay(200);
      digitalWrite(ledPins[3], HIGH); //yellow is on          //"-do3"
