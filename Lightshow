      {
        digitalWrite(ledPins[index], HIGH); //all are on
      }
      delay(300);                                             //"shark"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all are off
      }

      /* FIRST - MOMMY SHARK */
