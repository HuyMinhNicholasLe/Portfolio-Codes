const int switchPin = 3;
int ledPins[] = {7,8,9,10,11,12,13};

void setup(){
  pinMode(switchPin,INPUT);

  int index;

  for(index = 0; index <= 6; index++)
  {
    pinMode(ledPins[index],OUTPUT);
  }
}

void loop(){
  int switchVal;
  int index;

  switchVal = digitalRead(switchPin);

  if(switchVal == HIGH){
      /* FIRST - BABY SHARK */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(450);                                             //"ba-"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(450);                                             //"-by"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all are on
      }
      delay(300);                                             //"shark"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all are off
      }
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"do-"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off

      /* SECOND */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(400);                                             //"ba-"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(400);                                             //"-by"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all are on
      }
      delay(300);                                             //"shark"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all are off
      }
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"do-"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off

      /* THIRD */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(400);                                             //"ba-"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(400);                                             //"-by"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], HIGH); //all are on
      }
      delay(300);                                             //"shark"
      for(index = 0; index <= 6; index++)
      {
        digitalWrite(ledPins[index], LOW); //all are off
      }
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"do-"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[0], LOW); //first red is off
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[3], HIGH); //yellow is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[3], LOW); //yellow is off
      digitalWrite(ledPins[2], HIGH); //first green is on
      digitalWrite(ledPins[4], HIGH); //second green is on
      delay(200);                                             //"-do"
      digitalWrite(ledPins[2], LOW); //first green is off
      digitalWrite(ledPins[4], LOW); //second green is off

      /* FOURTH - BABY SHARK ONLY */
      digitalWrite(ledPins[0], HIGH); //first red is on
      digitalWrite(ledPins[6], HIGH); //second red is on
      delay(400);                                             //"ba-"
      digitalWrite(ledPins[0], LOW); //first red is off 
      digitalWrite(ledPins[6], LOW); //second red is off
      digitalWrite(ledPins[1], HIGH); //first blue is on
      digitalWrite(ledPins[5], HIGH); //second blue is on
      delay(400);                                             //"-by"
      digitalWrite(ledPins[1], LOW); //first blue is off
      digitalWrite(ledPins[5], LOW); //second blue is off
